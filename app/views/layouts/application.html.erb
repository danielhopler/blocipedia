<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <!-- NAV -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Blocipedia", root_path, class:"navbar-brand" %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li> <%= link_to "Wikis", wikis_path %> </li>
            <% if user_signed_in? %>
               <li> <%= link_to 'Edit profile', edit_user_registration_path %> </li>
               <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete  %> </li>
              <li class="navbar-text navbar-right"  id="nav-signed-in">Signed in as: <strong><%= current_user.email %></strong>  </li>
            <% else %>
              <li > <%= link_to "Sign Up ", new_user_registration_path, class: 'navbar-link' %></li>
              <li ><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %> -</li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  <!-- END NAV -->
    <div class="container">

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>


      <%= yield %>
    </div>

  </body>
</html>
