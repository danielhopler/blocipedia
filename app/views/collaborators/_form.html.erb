<div class="row">
  <div class="col-md-8">
    <% if current_user.premium? || current_user.admin? %>
      <%= form_for [@wiki, Collaborator.new] do |f| %>
        <div class="form-group">
          <%= f.submit "Add Collaborator", class: 'btn wiki-btn' %>
        </div>
        <div class="form-group">
          <%= email_field_tag :email, '', class: 'form-control', placeholder: 'Enter collaborator\'s email' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
