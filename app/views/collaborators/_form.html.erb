 <% if Collaborator.exists?(wiki_id: wiki.id) %>

   <%= link_to [wiki, collaborator], class: 'btn btn-danger', method: :delete do %>
     <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Remove Collaborator
   <% end %>

 <% else %>

 	<%= link_to [wiki, Collaborator.new], class: 'btn btn-primary', method: :post do %>
 		<i class="glyphicon glyphicon-star"> </i>&nbsp; Add Collaborator
 	<% end %>

 <% end %>
